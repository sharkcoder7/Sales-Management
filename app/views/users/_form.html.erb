<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited this used from being saved:
      </h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li> <%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group">
  <%= f.label :name %>
  <br>
  <%= f.text_field :name, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :password %>
  <br>
  <%= f.password_field :password, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :admin, "Check box if you are an admin" %>
  <%= f.check_box :admin, class: "form-check-input" %>
</div>

<div class="actions">
  <%= f.submit class: "btn btn-primary" %>
</div>

<% end %>

