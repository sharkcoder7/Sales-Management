<%= form_for(@item) do |f| %>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form control" %>
  </div> 

  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.number_field :price, class: "form control", step: :any %>
  </div> 

  <div class="form-group">
    <%= f.label :catagory %>

    <%= f.select :catagory, options_for_select(Item.catagories, prompt: "Please select your username from this dropdown") %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>